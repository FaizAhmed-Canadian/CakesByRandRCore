                $('#navUl').removeClass('menu-center');
                $('.main-content').css('margin-top', '0');
            }
            else {
                $('#web_title').removeClass('hidden');
                $('#mobile_title').addClass('hidden');
                $('.forMobile').addClass('hidden');
                $('.forCom').removeClass('hidden');
                $('#navUl').addClass('menu-center');
            }

            //var pageHeight = $(document).height() - 3; // $('#body')[0].offsetHeight;
            //var header = $('#header').height(); //$('#header')[0].offsetHeight;
            //var foother = $('#footer').height(); //$('#footer')[0].offsetHeight;
            //var mainContant = pageHeight - header - foother;
            ////console.log(mainContant);
            //$('#mainContent').css('min-height', mainContant + 'px');
