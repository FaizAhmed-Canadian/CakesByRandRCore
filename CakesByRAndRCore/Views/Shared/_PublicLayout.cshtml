    <link href="~/css/style-main.css" rel="stylesheet" />
    <link href="~/css/preloader.css" rel="stylesheet" />
    <link href="~/css/custom-bootstrap-margin-padding.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/content.css" rel="stylesheet" />
    <link href="~/Content/AppStyle.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/component.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/Content/iziModal.min.css" rel="stylesheet">


    <script src="~/js/jquery-plugin-collection.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>

    <script src="~/Scripts/RAndRJavaScripts.js"></script>
    @*   <script src="~/Scripts/iziModal.min.js"></script>*@
    <script src="~/Scripts/iziModal.js"></script>
    <script src="~/js/jquery-2.2.4.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
