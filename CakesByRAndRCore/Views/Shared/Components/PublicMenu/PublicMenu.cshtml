@model List<CakesByRAndRCore.Models.CakeCategory>

@{
    Layout = null;
}

<style>

        ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      width: 200px;
     /* background-color: #f1f1f1;*/
    }

    li a {
      display: block;
      color: #000;
      padding: 8px 16px;
      text-decoration: none;
    }

    li a.active {
      background-color: #04AA6D;
      color: white;
    }

    li a:hover:not(.active) {
      background-color:yellowgreen;
      color: white;
    }
     
</style>

<ul  >

    @foreach (var item in Model)
    {

        <li style=" padding-top:0px; padding-bottom:0px; text-align:center; border-bottom: 1px solid #555;">
            <a href="@item.URL/@item.Id" class="nav-link text-dark" style="font-family: Times New Roman; font-size: 16px; font-weight:normal ">@item.TextEng </a>
        </li>

    }

</ul>



