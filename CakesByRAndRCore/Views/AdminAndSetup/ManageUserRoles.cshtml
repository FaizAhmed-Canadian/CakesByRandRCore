@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <br />
            <div class="content-form-title"> <h2 id="title" style="font-size:20px;">Roles for user: @ViewBag.UserName</h2></div>
            <br />
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" asp-controller="AdminAndSetup" asp-action="SaveUserRoles" asp-route-userId="@ViewBag.userId" />

            <input type="submit" class="btn btn-primary" value="Cancel" asp-controller="AdminAndSetup" asp-action="ViewUsers" />
        </div>
    </div>
</form>