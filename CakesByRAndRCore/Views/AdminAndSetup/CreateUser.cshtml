@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@model CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}


@*<a asp-action="Home/Index" class="btn btn-secondary">Back</a>*@
<div asp-validation-summary="All" class="text-danger"></div>

<div class="col-md-8 offset-md-1" style="padding-top:50px">


    <form method="post" asp-action="Create">

@*        <br />
        <br />
        <br />*@
        <div class="content-form-title" > <h2 id="title" style="font-size:20px;">Create User:</h2></div>

        <div class="form-group">
            <div class="col-md-2">
                <input asp-for="Id" class="form-control" hidden />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" style="color: red;"></span>
                </div>


                <div class="form-group">
                    <br />
                </div>

                @* <button type="submit" id="btnSave" class="btn btn-primary" onclick="ShowAlert()">Create</button>*@

                <button type="submit" id="btnSave" class="btn btn-primary">Save</button>

            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" style="color: red;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" style="color: red;"></span>
                </div>



                <div class="form-group">
                    <label asp-for="YesNoList"></label>
                    @Html.DropDownListFor(m => m.YesNoId, Model.YesNoList, new { @class = "form-control" })
                </div>





            </div>
        </div>
    </form>

</div>


@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @*    <partial name="_ValidationScriptsPartial" />*@

}
